{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Enter_Extractor_Api.Services.Cache": "Debug",
      "Enter_Extractor_Api.Services.Redis": "Information"
    }
  },
  "AllowedHosts": "*",
  "Redis": {
    "ConnectionString": "localhost:6379",
    "Cache": {
      "ConnectionString": "localhost:6379",
      "InstanceName": "EnterExtract:Cache:",
      "Database": 0,
      "DefaultExpirationMinutes": 10080,
      "MaxRetries": 3,
      "RetryDelayMs": 200,
      "DefaultTTLSeconds": 604800,
      "EmbeddingTTLSeconds": 2592000,
      "MetricsTTLSeconds": 7776000,
      "CircuitBreakerThreshold": 5,
      "CircuitBreakerDurationSeconds": 30,
      "EnableCompression": false,
      "MaxCachedResultSizeKB": 500
    },
    "Storage": {
      "ConnectionString": "localhost:6380",
      "InstanceName": "EnterExtract:Storage:",
      "Database": 0,
      "MaxRetries": 3,
      "RetryDelayMs": 200
    },
    "PdfHashing": {
      "Algorithm": "SHA256",
      "TruncateLength": 40
    }
  },
  "PythonApi": {
    "BaseUrl": "http://pdf-extractor:5000"
  },
  "CacheSettings": {
    "DefaultExpirationHours": 24,
    "MaxCacheSize": 1000
  },
  "SmartExtraction": {
    "PythonApiUrl": "http://localhost:5000",
    "Enabled": true,
    "ConfidenceThreshold": 0.7,
    "EnableGptFallback": false,
    "Notes": "Pipeline: Cache → NER → Embeddings → GPT (condicional)"
  }
}
